#!/usr/bin/env php
<?php

        require(__DIR__ . "/../includes/config.php");

        if($argc != 2)
        {
        	printf("usage inaccurate");
        	return 1;
        }
        $n = 1;
        if($argv[1] === false)
        {
        	printf("couldnt open file");
        	return 2;
        }
        if(is_readable($argv[1]) === false)
        {
        	printf("file is not readable");
        	return 3;
        }
        if(file_exists($argv[1]) === false)
    	{
    		printf("file is not readable");
    		return 4;
    	}
        $file = fopen($argv[1],"r");
        if($file === false)
        {
        	printf("coundnot open file");
        }

        while($row = fgetcsv($file,0,"\t"))
        {

			query("INSERT INTO places (id,country_code, postal_code, place_name,admin_name1, admin_code1, admin_name2, admin_code2, admin_name3, admin_code3, latitude, longitude,accuracy) VALUES(?,?,?,?,?,?,?,?,?,?,?,?,?)", $n ,$row[0],$row[1],$row[2],$row[3],$row[4],$row[5],$row[6],$row[7],$row[8],$row[9],$row[10],$row[11]);
    	 	$n = $n + 1;

        }
        
       	fclose($file)

?>
